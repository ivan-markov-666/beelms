{
  "name": "qa-4-free",
  "private": true,
  "devDependencies": {
    "husky": "^8.0.3"
  },
  "scripts": {
    "prepare": "husky install",
    "lint": "npm --prefix be run lint && npm --prefix fe run lint && npx --yes @redocly/cli@latest lint --config .redocly.yaml docs/architecture/openapi.yaml",
    "lint:log": "npm run lint > lint.log 2>&1",
    "format": "npm --prefix be run format && npm --prefix fe run format",
    "format:log": "npm run format > format.log 2>&1",
    "docs:openapi:lint": "npx -y @redocly/cli@latest lint --config .redocly.yaml docs/architecture/openapi.yaml",
    "test:be": "npm --prefix be run test:regression:local",
    "test:be:log": "npm run test:be > test-be.log 2>&1",
    "test:fe": "npm --prefix fe run test",
    "test:fe:log": "npm run test:fe > test-fe.log 2>&1",

    "be:migration:run": "npm --prefix be run migration:run",
    "be:migration:revert": "npm --prefix be run migration:revert",
    "be:migration:show": "npm --prefix be run migration:show",
    "be:migration:check": "npm --prefix be run migration:check",

    "be:seed:wiki": "npm --prefix be run seed:wiki",
    "be:seed:courses": "npm --prefix be run seed:courses",
    "be:seed:wiki:dev": "npm --prefix be run seed:wiki:dev",
    "be:seed:courses:dev": "npm --prefix be run seed:courses:dev",
    "be:seed:dev": "npm --prefix be run seed:wiki:dev && npm --prefix be run seed:courses:dev",

    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:down:volumes": "docker compose down -v",
    "docker:rebuild:api": "docker compose up -d --build api",
    "docker:migrate": "docker compose run --rm migrate",
    "docker:seed:wiki": "docker compose exec api npm run seed:wiki",
    "docker:seed:courses": "docker compose exec api npm run seed:courses",
    "docker:db:host": "docker compose -f docker-compose.yml -f docker-compose.db-host.yml up -d db"
  }
}
