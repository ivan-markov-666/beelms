{
  "name": "lms",
  "version": "1.0.0",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "pnpm test:all",
    "test:all": "pnpm test:smoke && pnpm test:regression && pnpm test:unit",
    "test:unit": "jest --config=jest.config.js --testPathPattern=tests/unit",
    "typecheck": "tsc --noEmit -p tsconfig.base.json",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "format": "prettier --write .",
    "prepare": "husky install",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:ps": "docker-compose ps",
    "docker:restart": "pnpm docker:down && pnpm docker:up",
    "test:smoke": "sh ./tests/smoke/health-check.sh",
    "test:regression": "pnpm test:regression:api && pnpm test:regression:e2e",
    "test:regression:api": "jest --config=jest.config.js --testPathPattern=tests/regression/api",
    "test:regression:e2e": "jest --config=jest.config.js --testPathPattern=tests/regression/e2e"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.19"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-typescript": "^7.21.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.5.0",
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "axios": "^1.4.0",
    "babel-jest": "^29.6.0",
    "better-sqlite3": "8.5.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.0",
    "jest": "^29.6.0",
    "lint-staged": "^15.0.0",
    "playwright": "^1.35.0",
    "prettier": "^3.1.0",
    "sqlite3": "^5.1.7",
    "supertest": "^6.3.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0",
    "vite-tsconfig-paths": "^4.2.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,css,scss,yaml,yml}": "prettier --write"
  },
  "description": ""
}
