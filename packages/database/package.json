{
  "name": "@lms/database",
  "version": "1.0.0",
  "description": "Database seeding utilities for LMS platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:seed": "node dist/cli/seed.js",
    "db:seed:dev": "ts-node --project tsconfig.cli.json src/cli/seed.ts run --env dev",
    "db:seed:test": "ts-node --project tsconfig.cli.json src/cli/seed.ts run --env test",
    "db:seed:prod": "ts-node --project tsconfig.cli.json src/cli/seed.ts run --env prod",
    "db:seed:demo": "ts-node --project tsconfig.cli.json src/cli/seed.ts demo --env dev",
    "db:seed:status": "ts-node --project tsconfig.cli.json src/cli/seed.ts status --env dev",
    "docker:build": "docker-compose -f docker-compose.seeder.yml build",
    "docker:up": "docker-compose -f docker-compose.seeder.yml up -d postgres",
    "docker:down": "docker-compose -f docker-compose.seeder.yml down",
    "docker:seed": "docker-compose -f docker-compose.seeder.yml --env-file .env.dev run --rm db-seeder",
    "docker:seed:dev": "docker-compose -f docker-compose.seeder.yml --env-file .env.dev run --rm db-seeder",
    "docker:seed:test": "docker-compose -f docker-compose.seeder.yml --env-file .env.test run --rm db-seeder",
    "docker:seed:prod": "docker-compose -f docker-compose.seeder.yml --env-file .env.prod run --rm db-seeder",
    "docker:demo": "docker-compose -f docker-compose.seeder.yml --env-file .env.dev --profile demo run --rm db-seeder-demo",
    "docker:status": "docker-compose -f docker-compose.seeder.yml --env-file .env.dev --profile status run --rm db-seeder-status",
    "docker:logs": "docker-compose -f docker-compose.seeder.yml logs -f",
    "docker:clean": "docker-compose -f docker-compose.seeder.yml down -v && docker system prune -f"
  },
  "dependencies": {
    "@lms/shared-types": "workspace:*",
    "@types/dotenv": "^8.2.3",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "commander": "^11.1.0",
    "dotenv": "^17.2.0",
    "reflect-metadata": "^0.2.2",
    "sql.js": "^1.13.0",
    "typeorm": "^0.3.19"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/commander": "^2.12.5",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.5.0",
    "@types/sql.js": "^1.4.9",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "pg": "^8.11.0"
  }
}
