{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "node",
      "jest"
    ] // Добавете това
  },
  "include": [
    "migrations/**/*.ts",
    "typeorm.config.ts",
    "tests/**/*.ts" // Добавете това
  ],
  "exclude": [
    "node_modules"
  ]
}