{
  "name": "@qa-platform/backend",
  "version": "0.0.1",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "start": "ts-node src/main.ts",
    "build": "tsc -p tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d src/data-source.ts",
    "migration:run": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d src/data-source.ts migration:run",
    "migration:generate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d src/data-source.ts migration:generate src/database/migrations/InitialMigration"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "joi": "^17.9.2",
    "pg": "^8.10.0",
    "reflect-metadata": "^0.1.13",
    "dotenv": "^16.3.1",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.25"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.4",
    "@nestjs/testing": "^10.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.8.0",
    "@types/sqlite3": "^5.1.0",
    "better-sqlite3": "11.0.0",
    "jest": "^29.5.0",
    "sqlite3": "^5.1.7",
    "testcontainers": "^9.1.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0",
    "@types/dotenv": "^8.2.0",
    "tsconfig-paths": "^4.2.0"
  }
}
